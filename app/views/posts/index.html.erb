<div class ="container">
  <div class= 'row'>
    <% @products.each do |product| %>
      <div class="col-md-3 col-sm-4 col-6 bg-succsess">
        <div class='product'>
          <div class='picture'>
            <%= image_tag product[:picture] %>
          </div>
          <div class='title'>
            <%= product[:title] %>
          </div>
          <div class='price'>
            <%= product[:price] %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
